<div class="center">
	<div class="row">
	<div class="col-sm-10 col-sm-offset-1" id="contact_img">
		<h1><small><strong>Contact Us</strong></small></h1>
		<%= image_tag("contact.jpg")%>
		<p>(pic size 1108*400 2.75)</p>
	</div>
	</div>
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 outside_box">
			
			<div class="row inside_box">
				<!-- <div class="inside_box"> -->
				<div class="col-sm-6 ">
					<%= form_for(@organisation) do |f| %> 
					<%= f.label :Organisation_Name %>
					<%= f.text_field :oname , class: 'form-control' %>
					<%= f.label :Contact_Name %>
					<%= f.text_field :cname , class: 'form-control' %>
					<%= f.label :Contact_Email %>
					<%= f.email_field :email, class: 'form-control'  %>
					<%= f.label :Contact_Phone %>
					<%= f.text_field :phone, class: 'form-control'%>
					<%= render 'shared/error_msg_organisation' %>
					<%= f.submit "SUMBIT", class: "btn btn-primary" %> 
					<% end %>
				</div>
			<!-- </div> -->
				<div class="col-sm-6" id="contact_form_left">
					<h4>...OR VIA EMAIL,PHONE OR POST</h4>
					<p><b>EMAIL</b><br>info@brightsparqe.com</p>
					<p><b>TELEPHONE</b><br>1300111838</p>
					<p><b>POST</b><br>
						Bright Sparqe <br>
						PO box 80 <br>
						Melbourne <br>
						VIC 3000 Australia
					</p>
				</div>
			</div>
		</div>
	</div>
</div>